<section class="cta-section">
  <div class="live-demo">
    <div class="phone-mockup">
      <div class="camera-feed">
        <div class="hand-tracking-animation"></div>
        <div class="signature-trail"></div>
      </div>
    </div>
  </div>
  
  <div class="cta-content">
    <h2>Start Creating Now</h2>
    <div class="benefits">
      <div class="benefit animate-in">
        <span class="number">01</span>
        <h3>Turn on your camera</h3>
      </div>
      <div class="benefit animate-in">
        <span class="number">02</span>
        <h3>Sign in the air</h3>
      </div>
      <div class="benefit animate-in">
        <span class="number">03</span>
        <h3>Mint your digital card</h3>
      </div>
    </div>
    <a href="#try-now" class="try-button">Try for Free</a>
  </div>
</section>

<style>
  .cta-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    padding: 6rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
    min-height: 80vh;
  }

  .live-demo {
    position: relative;
  }

  .phone-mockup {
    width: 300px;
    height: 600px;
    background: var(--bg-card);
    border-radius: 40px;
    padding: 20px;
    position: relative;
    margin: auto;
    box-shadow: 0 30px 60px rgba(0,0,0,0.12);
    animation: float 6s ease-in-out infinite;
  }

  .camera-feed {
    background: var(--bg-dark);
    height: 100%;
    border-radius: 24px;
    overflow: hidden;
    position: relative;
  }

  .hand-tracking-animation {
    width: 20px;
    height: 20px;
    background: rgba(0, 230, 230, 0.5);
    border-radius: 50%;
    position: absolute;
    filter: blur(10px);
    animation: tracking 3s ease-in-out infinite;
  }

  .signature-trail {
    position: absolute;
    width: 100%;
    height: 100%;
    background: var(--primary-gradient);
    mask: linear-gradient(90deg, transparent, white);
    -webkit-mask: linear-gradient(90deg, transparent, white);
    animation: sign 2s ease-in-out infinite;
    opacity: 0.3;
  }

  .cta-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2rem;
  }

  .benefits {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .benefit {
    display: flex;
    align-items: center;
    gap: 1rem;
    opacity: 0;
    transform: translateY(20px);
  }

  .animate-in {
    animation: slideUp 0.6s ease forwards;
  }

  .benefit:nth-child(2) { animation-delay: 0.2s; }
  .benefit:nth-child(3) { animation-delay: 0.4s; }

  .number {
    font-size: 1.5rem;
    font-weight: 700;
    color: #00E6E6;
  }

  .try-button {
    display: inline-block;
    background: var(--primary-gradient);
    color: white;
    padding: 1.2rem 3rem;
    border-radius: 100px;
    font-weight: 500;
    text-decoration: none;
    text-align: center;
    transform-origin: center;
    animation: pulse 2s infinite;
    margin-top: 2rem;
  }

  @keyframes tracking {
    0%, 100% { transform: translate(50px, 100px); }
    50% { transform: translate(200px, 300px); }
  }

  @keyframes sign {
    0% { transform: translateX(-100%) rotate(-45deg); }
    100% { transform: translateX(100%) rotate(-45deg); }
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }

  @media (max-width: 768px) {
    .cta-section {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .benefits {
      align-items: center;
    }
  }
</style> 