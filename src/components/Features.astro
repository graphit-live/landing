---
const features = [
  {
    title: "Create in AR",
    description: "Sign autographs in mid-air using hand-tracking technology"
  },
  {
    title: "Collect & Trade",
    description: "Own authentic digital autographs as tradeable digital cards"
  },
  {
    title: "Connect",
    description: "Direct interaction between creators and fans"
  }
];
---

<section class="features">
  {features.map(feature => (
    <div class="feature-card">
      <h3>{feature.title}</h3>
      <p>{feature.description}</p>
    </div>
  ))}
</section>

<style>
  .features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    padding: 4rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .feature-card {
    padding: 2rem;
    border-radius: 1rem;
    background: var(--bg-card);
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    border: 1px solid #333;
  }

  .feature-card h3 {
    color: var(--text-primary);
  }

  .feature-card p {
    color: var(--text-secondary);
  }
</style> 